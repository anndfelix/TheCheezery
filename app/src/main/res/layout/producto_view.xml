<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/producto_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/caramelfrap"></ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/producto_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:textColor="@color/less_purple"
            android:text="Caramel Frap" />

        <TextView
            android:id="@+id/producto_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="8dp"
            android:text="Descripcion del producto" />
    </LinearLayout>

    <TextView
        android:id="@+id/producto_precio"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textColor="@color/less_purple"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="$50" />

</LinearLayout>